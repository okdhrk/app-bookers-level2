<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
      <label for="inputName">Name</label>
      <br>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
      <br>
      <label for="inputImage">ProfileImage</label>
      <br>
      <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
      <br>
      <label for="inputName">Introduction</label>
      <br>
      <%= f.text_area :introduction, autofocus: true, id:"inputintroduction", placeholder:"introduction"%>
      <br>
      <%= f.submit "Update User", class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>

<footer>
  <div class="container mt-5">
    <div class="row">
      <div class="mx-auto">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>