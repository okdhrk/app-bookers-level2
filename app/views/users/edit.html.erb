<h2>User info</h2>

<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
<% end %>

<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  <br>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
<br>

  <label for="inputImage">ProfileImage</label>
<br>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>

  <br>
  <label for="inputName">Introduction</label>
  <br>
  <%= f.text_area :introduction, autofocus: true, id:"inputintroduction", placeholder:"introduction"%>
<br>



  <%= f.submit "Update User"  %>
<% end %>
