<main>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-5">
    <h1>Follow Users</h1>
    <table class="table">
    <% if @users.empty? %>
      <p>ユーザーはいません</p>

    <% else %>

    <table>
      <thead>
        <tr>
          <td>image</td>
          <td>name</td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
        </thead>
        <tbody>
          <% @users.each do |followings_user| %>
          <tr>
          <td>
            <%= attachment_image_tag followings_user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
          </td>
          <td>
            <%= followings_user.name %>
          </td>
          <td>
            <div id=follow.count + user.id.to_s>
            フォロー数：<%= followings_user.followings.count %>
          </div>
          </td>
          <td>
            <div id=follow.count + user.id.to_s>
              フォロワー数：<%= followings_user.followers.count %>
            </div>
          </td>
          <td>
            <%= link_to 'Show', user_path(followings_user) %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
  </table>
  </div>
</div>
</div>
</main>